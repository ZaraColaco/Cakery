@model Cakeryz.Models.Product

@{
    ViewData["Title"] = "Edit";
}
<script type="text/javascript">
    function onPriceChange() {
        var pCost = $('#Product_ProductionCost').val();// stores the value of the production cost
        var Cost = $('#Product_Price').val();//stores the value of the price

        if (pCost !== "" && Cost !== "")//not nulls
        {
           $('#Product_Profit').val=Cost - pCost;
        }
</script>
<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                    <select select asp-for="Category" class="form-control" >
                    <option value="">Please choose one</option>
                    <option value="Cold Desserts">Cold Desserts</option>
                    <option value="Cakes">Cakes</option>
                    <option value="Cookies">Cookies</option>
                    </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionCost" class="control-label"></label>
                <input asp-for="ProductionCost" class="form-control" />
                <span asp-validation-for="ProductionCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" onchange="onPriceChange()" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profit" class="control-label"></label>
                <input asp-for="Profit" readonly class="form-control"  />
                <span asp-validation-for="Profit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
