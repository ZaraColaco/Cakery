
@using Microsoft.AspNetCore.Identity
@using Cakeryz.Areas.Identity.Data
@inject SignInManager<CakeryzUser> SignInManager
@inject UserManager<CakeryzUser> UserManager
@model Cakeryz.Models.Order

@{
    ViewData["Title"] = "Create";
}
@*<script type="text/javascript">
    var inputValue = Cakeryz.getElementById("myTextInputID").value;
    </script>*@

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DatePlaced" class="control-label">Date Placed</label>
                <input asp-for="DatePlaced" value=@DateTime.Now; class="form-control" />
                <span asp-validation-for="DatePlaced" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryorPickup" class="control-label">Delivery or Pickup?</label>
                 <select select asp-for="DeliveryorPickup" class="form-control" >
                    <option value="">Please choose one</option>
                    <option value="Delivery">Delivery</option>
                    <option value="Pickup">Pickup</option>
                    </select>
                <span asp-validation-for="DeliveryorPickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CollectionDate" class="control-label">I want to recieve my order by:</label>
                <input asp-for="CollectionDate" class="form-control" />
                <span asp-validation-for="CollectionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select select asp-for="Status" class="form-control">
                    <option value="">Admin Use Only</option>
                    <option value="Requested">Requested</option>
                    <option value="Approved">Approved</option>
                    <option value="Awaiting Payment">Awaiting Payment</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Complete">Complete</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paydate" class="control-label"></label>
                <input asp-for="Paydate" class="form-control" />
                <span asp-validation-for="Paydate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CakeryzUser" class="control-label"></label>
                <input asp-for="CakeryzUser" value=@UserManager.GetUserId(User) id="myTextInputID" readonly class="form-control" />
                <span asp-validation-for="CakeryzUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
